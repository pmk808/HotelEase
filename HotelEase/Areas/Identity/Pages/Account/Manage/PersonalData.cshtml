@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="mb-3">@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-body">
                <p>
                    Your account contains personal data that you have given us. This page allows you to download or delete that data.
                </p>
                <p class="mb-0">
                    <strong class="text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row gap-3">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn profile-btn" type="submit">
                    <i class="fas fa-download me-2"></i>Download
                </button>
            </form>

            <a id="delete" asp-page="DeletePersonalData" class="btn profile-btn-danger">
                <i class="fas fa-trash-alt me-2"></i>Delete
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}