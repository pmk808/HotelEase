@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mb-3">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="profile-form">
    <form id="profile-form" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" disabled />
                    <small class="text-muted">Your username cannot be changed</small>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label">Phone number</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8">
                <button id="update-profile-button" type="submit" class="btn profile-btn">
                    <i class="fas fa-save me-2"></i>Save changes
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}