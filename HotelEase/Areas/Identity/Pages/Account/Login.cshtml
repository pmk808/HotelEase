@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@if (!string.IsNullOrEmpty(Model.LoginMessage))
{
    <div class="alert alert-info">
        @Model.LoginMessage
    </div>
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-75 shadow-lg rounded-4 overflow-hidden position-relative" style="max-width: 1200px;">
        <!-- Left Box (Login Form) -->
        <div class="col-md-6 p-5 text-white" style="background-color: #223843; border-radius: 30px;">
            <h1 class="text-center mb-4">LOGIN</h1>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color: #D77A61; border-radius: 10px;">Log in</button>

                <div class="mt-3 text-center">
                    <p><a id="forgot-password" asp-page="./ForgotPassword" class="text-white">Forgot your password?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Register as a new user</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Resend email confirmation</a></p>
                </div>
            </form>
        </div>

        <!-- Right Box (Welcome Message & Branding) -->
        <div class="col-md-6 p-5 position-relative d-flex flex-column justify-content-center align-items-center text-center" style="z-index: 2; font-family: 'Inria Serif', serif;">
            <h1 class="mb-3" style="color: #223843;">HOTELEASE</h1>
            <p class="fs-4" style="color: #000; max-width: 80%;">Your perfect stay is just a click away. Be a member and Book now!</p>
        </div>

        <!-- Decorative Shape -->
        <div class="position-absolute top-0 end-0 h-100"
             style="width: 50%; background-color: #D77A61; clip-path: polygon(100% 0, 100% 100%, 30% 100%); z-index: 1;">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
