@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-container">
    <div class="auth-box row shadow-lg">
        <!-- Left Side - Login Form -->
        <div class="col-md-6 auth-form-side">
            <div class="text-center mb-4">
                <h1 class="fw-bold display-5 mb-3">LOGIN</h1>
                @if (!string.IsNullOrEmpty(Model.LoginMessage))
                {
                    <div class="alert alert-info">
                        @Model.LoginMessage
                    </div>
                }
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg mb-3" style="background-color: #D77A61; color: white; border-radius: 10px;">
                    <i class="fas fa-sign-in-alt me-2"></i>Log in
                </button>

                <div class="mt-3 d-flex justify-content-between">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-white text-decoration-none small">Forgot password?</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white text-decoration-none small">Resend confirmation email</a>
                </div>

                <div class="text-center mt-4">
                    <p class="mb-0">Don't have an account?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-light mt-2">
                        <i class="fas fa-user-plus me-2"></i>Register Now
                    </a>
                </div>
            </form>
        </div>

        <!-- Right Side - Welcome Message -->
        <div class="col-md-6 auth-welcome-side">
            <div class="h-100 d-flex flex-column justify-content-center px-4">
                <h1 class="text-center mb-4" style="color: #223843; font-family: 'Inria Serif', serif;">HOTELEASE</h1>
                <p class="fs-4 text-center" style="color: #000;">Your perfect stay is just a click away. Sign in to access your account and manage your bookings.</p>

            </div>

            <!-- Decorative Shape -->
            <div class="position-absolute top-0 end-0 h-100"
                 style="width: 50%; background-color: #D77A61; clip-path: polygon(100% 0, 100% 100%, 0 100%); z-index: -1;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
}