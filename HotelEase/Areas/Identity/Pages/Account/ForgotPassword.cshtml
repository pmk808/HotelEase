@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center p-4">
    <!-- Card container for styling -->
    <div class="card shadow-lg p-4 border-0" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <h1 class="fw-bold mb-3">@ViewData["Title"]</h1>
        <h5 class="mb-3 text-muted">Enter your email to reset your password.</h5>
        <hr />

        <form method="post" class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Email input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Reset Password Button -->
            <button type="submit" class="btn w-100 text-white" style="background-color: #D77A61; border-radius: 8px;">
                Reset Password
            </button>
        </form>

        <!-- Back to login link -->
        <div class="mt-3">
            <a href="/Login" class="text-decoration-none" style="color: #223843;">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
