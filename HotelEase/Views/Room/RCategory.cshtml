@{
    ViewData["Title"] = "Room Categories";
}
<section id="Standard-room">
    <div class="container mt-5">
        <h1 class="text-center">STANDARD ROOMS</h1>

        <div class="row mt-4">
            @foreach (var room in new[]
            {
            new { Title = "Standard Single Bed Room", Image = "/imgs/singlebed.jpg", Description = "with Air-conditioning, TV, Free Wi-Fi, good for 1 person", Price = "₱2,800" },
            new { Title = "Standard Double Bed Room", Image = "/imgs/doublebed.jpg", Description = "with Air-conditioning, TV, Free Wi-Fi, good for 2 persons", Price = "₱4,500" },
            new { Title = "Standard Family Room", Image = "/imgs/twinbed.jpg", Description = "with Air-conditioning, TV, Wi-Fi, good for 4 persons", Price = "₱5,000" }
            })
            {
                <div class="col-12 col-md-6 col-lg-4 d-flex mb-2 justify-content-center">
                    <div class="card shadow" style="max-width: 22rem; border-radius: 20px;">
                        <img src="@room.Image" class="card-img-top img-fluid" alt="Room Image" style="border-radius: 20px 20px 0 0;">
                        <div class="card-body">
                            <h5 class="card-title text-start">@room.Title</h5>
                            <p class="card-text text-start">@room.Description</p>
                            <div class="d-flex justify-content-between">
                                <span class="bg-tertiary fs-6">@room.Price <small>per night</small></span>
                            </div>
                            <div class="d-flex mt-3 justify-content-center">
                                <a asp-controller="Room" asp-action="RList" class="btn btn-primary">View Room</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

