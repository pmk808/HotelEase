@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section (Carousel) -->
<section id="hero">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/imgs/hotel.jpg" class="d-block w-100" alt="Hotel Room" style="height: 400px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img src="~/imgs/pool.jpg" class="d-block w-100" alt="Pool" style="height: 400px; object-fit: cover;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Welcome Section -->

<section id="welcome" class="text-center mb-5" style="font-family: 'Inria Serif', serif;">
    <h1 class="display-4" ><br>Your perfect stay is just a click away.</h1>
    <p>
        Welcome to Hotel Ease!
        More than just a place to stay, we offer a curated escape where modern convenience meets timeless hospitality. <br />
        Whether you're here for adventure, business, or relaxation, our hotel is designed to make every moment effortless.
        </p>
    <button type="button" class="btn btn-outline-secondary">Learn More</button>
</section>

<section id="promotions" class="container position-relative my-5" style="max-width: 1410px; height: 1820px; font-family: 'Inria Serif', serif;">
    <div style="width: 1410px; height: 0px; border: 1px black solid"></div>
    <div class="position-absolute start-50 translate-middle-x text-center" style="top: 0;">
        <h2 class="display-3 fw-normal">Luxury & Comfort at Your Fingertips</h2>
    </div>

    <div class="position-absolute" style="top: 190px; left: 807px;">
        <img src="~/imgs/service.jpg" class="img-fluid rounded-3" style="width: 613px; height: 650px;" alt="Service">
    </div>

    <div class="position-absolute" style="top: 271px; left: 86px; width: 603px;">
        <p class="fs-1 text-justify">
            Find the best stays with real-time availability, instant confirmation, and exclusive deals—all in just a few clicks.
        </p>
    </div>

    <div class="position-absolute" style="top: 660px; left: 0;">
        <img src="~/imgs/bed.jpg" class="img-fluid rounded-3" style="width: 776px; height: 610px;" alt="Bed">
    </div>

    <div class="position-absolute" style="top: 910px; left: 846px; width: 544px;">
        <p class="fs-1 text-justify">
            Whether for work or leisure, our rooms provide the perfect balance of style and serenity.
        </p>
    </div>

    <div class="position-absolute" style="top: 1250px; left: 807px;">
        <img src="~/imgs/room.jpg" class="img-fluid rounded-3" style="width: 622px; height: 563px;" alt="Room">
    </div>
</section>

<section id="rooms" class="container-fluid py-5" style="background: #223843;">
    <div class="container text-center">
        <!-- Title -->
        <h2 class="text-white display-3 mb-5" style="font-family: 'Inria Serif', serif;">
            OUR ROOMS
        </h2>

        <!-- Room Images & Labels -->
        <div class="row justify-content-center">
            <div class="col-md-4 d-flex flex-column align-items-center mb-4">
                <img src="~/imgs/standard.jpg" class="img-fluid rounded-3" style="width: 387px; height: 513px; object-fit: cover;">
                <h3 class="text-white mt-3" style="font-size: 30px; font-family: 'Inria Serif', serif;">STANDARD</h3>
            </div>
            <div class="col-md-4 d-flex flex-column align-items-center mb-4">
                <img src="~/imgs/deluxe.jpg" class="img-fluid rounded-3" style="width: 387px; height: 513px; object-fit: cover;">
                <h3 class="text-white mt-3" style="font-size: 30px; font-family: 'Inria Serif', serif;">DELUXE</h3>
            </div>
            <div class="col-md-4 d-flex flex-column align-items-center mb-4">
                <img src="~/imgs/suite.jpg" class="img-fluid rounded-3" style="width: 387px; height: 513px; object-fit: cover;">
                <h3 class="text-white mt-3" style="font-size: 30px; font-family: 'Inria Serif', serif;">SUITE</h3>
            </div>
        </div>
    </div>
</section>

<section id="book_now" class="container text-center py-5">
    <h2 class="display-1 fw-normal" style="font-family: 'Inria Serif', serif;">BOOK NOW</h2>
    <p class="fs-3" style="font-family: 'Inria Serif', serif;">
        And find the best rooms, enjoy exclusive deals, and experience seamless booking—all in one place. <br/>Don't wait, secure your stay today!
    </p>
    <div class="d-flex justify-content-center">
        <button class="btn btn-lg" style="background: #D77A61; border-radius: 20px;">
            BOOK NOW
        </button>
    </div>
</section>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}