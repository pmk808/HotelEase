@{
    ViewData["Title"] = "Home Page";
}



<!-- Hero Section (Carousel) -->
<section id="hero">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/imgs/hotel.jpg" class="d-block w-100" alt="Hotel Room" style="height: 400px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img src="~/imgs/pool.jpg" class="d-block w-100" alt="Pool" style="height: 400px; object-fit: cover;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Welcome Section -->
<section id="welcome" class="container text-center mb-5" data-aos="fade-up" style="font-family: 'Inria Serif', serif;">
    <h1 class="display-4"><br>Your perfect stay is just a click away.</h1>
    <p>
        Welcome to Hotel Ease! More than just a place to stay, we offer a curated escape where modern convenience meets timeless hospitality. <br />
        Whether you're here for adventure, business, or relaxation, our hotel is designed to make every moment effortless.
    </p>
    <button type="button" class="btn btn-outline-secondary">Learn More</button>
</section>

<!-- Promotions Section -->
<section id="promotions" class="container my-5" data-aos="fade-up" style="font-family: 'Inria Serif', serif;">
    <div class="text-center mb-5">
        <h2 class="display-3 fw-normal">Luxury & Comfort at Your Fingertips</h2>
    </div>

        <!-- Service Section -->
        <div class="row d-flex align-items-center mb-5">
        
            <div class="col-lg-6 col-md-12 text-lg-start text-center" data-aos="fade-right">
                <p class="fs-4">
				    <h2>Find the best stays with real-time availability, instant confirmation, and exclusive deals—all in just a few clicks.</h2>
                </p>
            </div>
            <div class="col-lg-6 col-md-12 text-center" data-aos="fade-left">
            <img src="~/imgs/room.jpg" class="img-fluid rounded-3 w-100" alt="Service">
            </div>
        </div>

        <!-- Bed Section -->
        <div class="row d-flex align-items-center mb-5">
            <div class="col-lg-6 order-lg-1 text-center" data-aos="fade-right">
            <img src="~/imgs/bed.jpg" class="img-fluid rounded-3 w-100" alt="Bed">
		    </div>
            <div class="col-lg-6 order-lg-2 text-lg-start text-center" data-aos="fade-left">
			    <p class="fs-4">
				    <h2>Whether for work or leisure, our rooms provide the perfect balance of style and serenity.</h2>
			    </p>
		    </div>
	    </div>

    </section>


<section id="rooms" class="container-fluid py-5" data-aos="fade-up" style="background: #223843;">
    <div class="container text-center">
        <!-- Title -->
        <h2 class="text-white display-3 mb-5" style="font-family: 'Inria Serif', serif;">
            OUR ROOMS
        </h2>

        <!-- Room Images & Labels -->
       <div class="row justify-content-center">
            <div class="col-md-4" >
                <div class="rooms-card" onclick="window.location.href='@Url.Action("RCategory", "Room")?room=standard'">
                    <img src="~/imgs/standard.jpg" class="rooms-image">
                    
                </div>
            </div>
            <div class="col-md-4 ">
                <div class="rooms-card" onclick="window.location.href='@Url.Action("RCategory", "Room")?room=standard'">
                    <img src="~/imgs/deluxe.jpg" class="rooms-image">
                    
                </div>
            </div>
            <div class="col-md-4">
                <div class="rooms-card" onclick="window.location.href='@Url.Action("RCategory", "Room")?room=standard'">
                    <img src="~/imgs/suite.jpg" class="rooms-image">
                    
                </div>
            </div>
        </div>
    </div>
</section>

<section id="book_now" class="container d-flex flex-column align-items-center text-center py-5" data-aos="fade-up">
    <h2 class="display-1 fw-normal" style="font-family: 'Inria Serif', serif;">BOOK NOW</h2>
    <p class="fs-3" style="font-family: 'Inria Serif', serif; max-width: 800px;">
        And find the best rooms, enjoy exclusive deals, and experience seamless booking—all in one place.
        Don't wait, secure your stay today!
    </p>
    <button class="btn btn-lg text-white" style="background: #D77A61; border-radius: 20px;"
            onclick="window.location.href='@Url.Action("Rcategory", "Room")'">
        BOOK NOW
    </button>
</section>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
   


}