<!-- Improved About Us Page (Privacy.cshtml) -->
@{
    ViewData["Title"] = "About Us";
}

<div class="container about-us-container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5" data-aos="fade-up">
                <h1 class="display-4 fw-bold">About HotelEase</h1>
                <p class="lead">Your trusted partner for a comfortable and memorable stay</p>
            </div>

            <!-- Our Story Section -->
            <section class="about-us-section mb-5">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-4 mb-md-0" data-aos="slide-up">
                        <img src="/imgs/service1.jpg" alt="HotelEase Building" class="img-fluid rounded-3 shadow">
                    </div>
                    <div class="col-md-6" data-aos="slide-up">
                        <h1>Our Story</h1>
                        <p>Founded in 2020, HotelEase was created with a simple mission: to make booking a hotel room as easy as possible while providing exceptional value and service.</p>
                        <p>What started as a boutique hotel in the heart of the city has grown into a renowned hospitality brand dedicated to creating unforgettable experiences for our guests.</p>
                    </div>
                </div>
            </section>

            <!-- Our Mission Section -->
            <section class="about-us-section mb-5 py-4 bg-light rounded-3">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <h2 class="text-center mb-4">Our Mission</h2>
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <div class="icon-wrapper mb-3">
                                            <i class="fas fa-bed fs-1 text-primary"></i>
                                        </div>
                                        <h5 class="card-title">Comfort</h5>
                                        <p class="card-text">We provide exceptionally comfortable accommodations that feel like a home away from home.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <div class="icon-wrapper mb-3">
                                            <i class="fas fa-star fs-1 text-primary"></i>
                                        </div>
                                        <h5 class="card-title">Quality</h5>
                                        <p class="card-text">We maintain the highest standards of quality in every aspect of our service and facilities.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center p-4">
                                        <div class="icon-wrapper mb-3">
                                            <i class="fas fa-smile fs-1 text-primary"></i>
                                        </div>
                                        <h5 class="card-title">Satisfaction</h5>
                                        <p class="card-text">We prioritize guest satisfaction, making sure your stay exceeds expectations.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Facilities Section -->
            <section class="about-us-section mb-5">
                <h2 class="text-center mb-4">Our Facilities</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card facility-card h-100">
                            <img src="/imgs/pool.jpg" class="card-img-top fixed-img" alt="Swimming Pool">
                            <div class="card-body">
                                <h5 class="card-title">Swimming Pool</h5>
                                <p class="card-text">Relax and rejuvenate in our pristine swimming pool with sun loungers and poolside service.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card facility-card h-100">
                            <img src="/imgs/room.jpg" class="card-img-top fixed-img" alt="Restaurant">
                            <div class="card-body">
                                <h5 class="card-title">Luxury Rooms</h5>
                                <p class="card-text">Our rooms are designed with your comfort in mind, featuring premium amenities and elegant décor.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card facility-card h-100">
                            <img src="/imgs/suite.jpg" class="card-img-top fixed-img" alt="Spa">
                            <div class="card-body">
                                <h5 class="card-title">Executive Suites</h5>
                                <p class="card-text">Experience the pinnacle of luxury in our spacious executive suites with separate living areas.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Contact Section -->
            <section id="contact" class="about-us-section mb-5">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Contact Us</h2>
                        <div class="row">
                            <div class="col-md-6 mb-4 mb-md-0">
                                <h5 class="mb-3">Get in Touch</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas fa-map-marker-alt text-primary me-2"></i> 123 Hotel Street, City, Country
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-phone text-primary me-2"></i> +1 (555) 123-4567
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-envelope text-primary me-2"></i> info@hotelease.com
                                    </li>
                                    <li>
                                        <i class="fas fa-clock text-primary me-2"></i> 24/7 Customer Support
                                    </li>
                                </ul>
                                <div class="mt-4">
                                    <h5 class="mb-3">Follow Us</h5>
                                    <div class="social-icons">
                                        <a href="#" class="me-2 text-decoration-none"><i class="fab fa-facebook-f fs-5"></i></a>
                                        <a href="#" class="me-2 text-decoration-none"><i class="fab fa-twitter fs-5"></i></a>
                                        <a href="#" class="me-2 text-decoration-none"><i class="fab fa-instagram fs-5"></i></a>
                                        <a href="#" class="text-decoration-none"><i class="fab fa-linkedin-in fs-5"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3">Send us a Message</h5>
                                <form>
                                    <div class="mb-3">
                                        <input type="text" class="form-control" placeholder="Your Name" required>
                                    </div>
                                    <div class="mb-3">
                                        <input type="email" class="form-control" placeholder="Your Email" required>
                                    </div>
                                    <div class="mb-3">
                                        <textarea class="form-control" rows="4" placeholder="Your Message" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Privacy Policy Section -->
            <section class="about-us-section">
                <h2 class="mb-4">Privacy Policy</h2>
                <p>At HotelEase, we take your privacy seriously. We are committed to protecting your personal information and ensuring your data is handled securely.</p>
                <p>Our privacy policy explains how we collect, use, and safeguard your information when you visit our website or use our services. By using our site, you agree to the terms outlined in our privacy policy.</p>
                <p>For detailed information about our privacy practices, please contact our customer service team.</p>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
}