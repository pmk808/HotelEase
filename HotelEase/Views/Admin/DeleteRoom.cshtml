@model HotelEase.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Room</h4>
                </div>
                <div class="card-body">
                    <h5>Are you sure you want to delete this room?</h5>

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-4">Room Name</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">@Model.Category</dd>

                            <dt class="col-sm-4">Bed Type</dt>
                            <dd class="col-sm-8">@Model.BedType</dd>

                            <dt class="col-sm-4">Price</dt>
                            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                        </dl>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i> Warning: Deleting this room will also remove all associated inventory and booking data.
                    </div>

                    <form asp-action="DeleteRoom" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="RoomInventory" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>